<body class="main-white">
	<nav>
        <div class="nav-wrapper main-white">
            <ul id="nav-mobile" class="left hide-on-med-and-down">
            	<li><%= image_tag("gabay-tbs-logo-white.png", height: '64', class: 'main-green')%></li>
            	<li><a class="main-green-text crete-round"><font size="5">GABAY ERYA FORMATION PROGRAM INFORMATION SYSTEM (GEFPIS)</font></a></li>
            </ul>
        </div>
    </nav>
    
    <!--login card-->
    <div class="container">
        <div class="row">
            <div class="col s4 offset-s4">
            	<div class="card main-white">
                	<div class="card-image">
                  		<%=image_tag("gabay-kid.png")%>
                    	<span class="card-title open-sans main-white-text"><font size="6.5">GEFPIS</font></span>
                	</div>
                	<div class="card-content open-sans main-grey-text">
                  		<div class="row">
                    		<form class="col s12">
                      			<div class="row">
                        			<div class="input-field col s12">
                          				<input id="icon_prefix" type="text" class="validate">
                          				<label for="icon_prefix"> <i class="tiny material-icons">email</i>&nbsp;Email Address</label>
                        			</div>
                        			<div class="input-field col s12">
                          				<input id="icon_telephone" type="tel" class="validate">
                          				<label for="icon_telephone"><i class="tiny material-icons">lock_outline</i>&nbsp;Password</label>
                        			</div>
                        			<div class="col s12">
                          				<input type="checkbox" class="checkbox-green filled-in" id="filled-in-box" checked="checked" />
                        				<label for="filled-in-box">Remember Me</label>
                        			</div>
                        			<div class="col s12">
                          				<br>
                          				<a class="waves-effect waves-light btn btn-main-green col s12">Sign In</a>
                        			</div>
                        			<div align="left" class="col s6">
                          				<br>
                                  <font size="2">
                          				<%= link_to 'Create and Account', new_member_path(@member), class: 'main-green-text'%>
                                  </font>
                        			</div>
                        			<div align="right" class="col s6">
                          				<br>
                          				<a class="main-green-text" href="#" class="right-align"><font size="2">Forgot Password?</font></a>
                        			</div>
                      			</div>
                    		</form>
                  		</div>
                	</div>
              	</div>
            </div>
        </div>
    </div>

</body>


